@page "/Priority/PriorityCodeIndex"
@model MDCLogArchitecture.RazorPages.Pages.Priority.PriorityCodeIndexModel
@{
    ViewData["Title"] = "PriorityCodeIndex";
}


<h1>Priority Codes</h1>

<a asp-page="/Priority/CreatePriorityCode" class="btn btn-success">Add New Priority Code</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Priority
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>

    @foreach (var item in Model.PriorityCodes)
    {
        <thead>
            <tr>
                <th>
                    @item.Priority
                </th>
                <th>
                    @item.Descr
                </th>
                <th>
                
                    <a asp-page="/Priority/EditPriorityCode" asp-route-Priority="@item.Priority" asp- class="btn btn-primary">Edit</a>
                
                </th>
            </tr>
        </thead>
    }
    @*<tbody>
        @Html.DisplayFor(model => model.PriorityCodes)
    </tbody>*@
</table>
